<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/aver"
    tools:context=".Fragments.Editar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="10"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Book Name:"
                    android:textSize="27dp"
                    android:textStyle="normal|bold" />

                <EditText
                    android:id="@+id/nombreLibro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:text="Autor:"
                    android:textSize="27dp"
                    android:textStyle="normal|bold" />

                <EditText
                    android:id="@+id/nombreAutor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:text="Editorial:"
                    android:textSize="27dp"
                    android:textStyle="normal|bold" />

                <EditText
                    android:id="@+id/editorial"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:text="Synopsis:"
                    android:textSize="27dp"
                    android:textStyle="normal|bold" />

                <EditText
                    android:inputType="text"
                    android:id="@+id/sinopsis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp" />


                <Button
                    android:id="@+id/btnGuardar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Save book"
                    android:textAllCaps="false"
                    android:textSize="30dp"
                    android:layout_gravity="bottom"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored" />


            </LinearLayout>

        </ScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_alignLeft="@+id/imageButton"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/imageView"
                android:scaleType="fitCenter"
                android:src="@drawable/addbook72"
                android:layout_marginLeft="50dp"/>

            <ImageButton
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:src="@drawable/camera70"
                android:layout_marginLeft="49dp"
                android:layout_marginStart="49dp"
                android:id="@+id/imageButton"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@null"
                style="@android:style/Widget.ImageButton" />


        </RelativeLayout>


    </LinearLayout>

</FrameLayout>