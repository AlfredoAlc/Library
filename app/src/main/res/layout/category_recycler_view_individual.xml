<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:padding="@dimen/left_right_margin">


    <TextView
        android:id="@+id/category_name_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <ImageView
        android:id="@+id/edit_category"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginEnd="@dimen/left_right_margin"
        android:contentDescription="@string/edit_string"
        android:src="@drawable/ic_edit_accent"
        app:layout_constraintEnd_toStartOf="@+id/delete_category"
        app:layout_constraintBottom_toBottomOf="@id/delete_category"
        app:layout_constraintTop_toTopOf="@id/delete_category"/>


    <ImageView
        android:id="@+id/delete_category"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginStart="@dimen/left_right_margin"
        android:layout_marginEnd="@dimen/left_right_margin"
        android:contentDescription="@string/delete_string"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_delete_accent"/>

</androidx.constraintlayout.widget.ConstraintLayout>