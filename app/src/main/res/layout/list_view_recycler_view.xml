<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/book_image_view"
        android:layout_width="80dp"
        android:layout_height="120dp"
        android:padding="16dp"
        android:src="@drawable/ic_add_book"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/top_margin"
        android:layout_marginStart="@dimen/left_right_margin"
        android:layout_marginLeft="@dimen/left_right_margin"
        android:textColor="@color/primary_text"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/book_image_view"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/last_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/top_margin"
        android:layout_marginStart="@dimen/left_right_margin"
        android:layout_marginLeft="@dimen/left_right_margin"
        android:textColor="@color/secondary_text"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/book_image_view" />


    <TextView
        android:id="@+id/coma_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_margin"
        android:layout_marginLeft="@dimen/space_margin"
        android:text="@string/coma"
        android:textColor="@color/secondary_text"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/last_name_tv"
        app:layout_constraintStart_toEndOf="@+id/last_name_tv" />


    <TextView
        android:id="@+id/first_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_margin"
        android:layout_marginLeft="@dimen/space_margin"
        android:textColor="@color/secondary_text"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/coma_tv"
        app:layout_constraintStart_toEndOf="@+id/coma_tv"
        app:layout_constraintTop_toTopOf="@+id/coma_tv" />

    <TextView
        android:id="@+id/number_pages_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/number_page_margin"
        android:layout_marginRight="@dimen/number_page_margin"
        android:textColor="@color/primary_text"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/book_image_view"
        android:background="@color/divider"
        app:layout_constraintBottom_toBottomOf="parent" />





</androidx.constraintlayout.widget.ConstraintLayout>